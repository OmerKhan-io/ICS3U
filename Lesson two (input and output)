amount = 24
print("two dozens is:", amount)
amount = 7*4
print("forty-two is:", amount)
amount= 8
amount += 1 #compact syntax, same thing as, amount = amount + 1
print("The amount is:",amount)
amount = 8 
amount *= 2 #compact syntax
print(amount)

q = 18
q = q - 1 # using subtraction
q -= 1 # does the same thing, This is the compact syntax 
print("The value is now: ", q) # prints out "The value is now: 16"
q = q / 2 # using division
q /= 2 # same thing
print("The value is now: ", q) # This prints out "The value is now: 4.0"
# in division the result would always be in decimal, unlike addition and multiplication 
